<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/puduWhite"
    tools:context=".ProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.Actionbar.Title"
        app:titleTextColor="@color/puduWhite"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:paddingHorizontal="10dp"
        tools:context=".ProductActivity">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving size: "
            android:textSize="18dp"
            >

        </TextView>
        <TextView
            android:id="@+id/textServingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            >
        </TextView>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nutritional information"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
    </TextView>
    <LinearLayout
        android:id="@+id/nutritional_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Ingredients"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/textIngredientsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text=""
        android:layout_marginTop="2dp"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Health and environment"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/novaGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Level of processing (Nova score): "
        android:layout_marginTop="2dp"
        >
    </TextView>
    <TextView
        android:id="@+id/nutraScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Nutriscore: "
        android:layout_marginTop="2dp"
        >
    </TextView>
    <TextView
        android:id="@+id/carbonFootprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Average carbon footprint for this type of product: "
        android:layout_marginTop="2dp"
        >
    </TextView>

</LinearLayout>
</LinearLayout>
</ScrollView>
